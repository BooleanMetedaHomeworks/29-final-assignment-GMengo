<Page x:Class="ristorante_frontend.Views.UserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ristorante_frontend.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UserPage">

    <!--<Page.DataContext>
        <vm:PiattoViewModels/>
    </Page.DataContext>-->

    <Page.Resources>
        <!-- Stile TextBox Moderno -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <!-- Stile Button Moderno -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderThickness="0"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.9"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <!-- Lista occupa 2/3 dello spazio -->
            <ColumnDefinition Width="*" />
            <!-- Form occupa 1/3 dello spazio -->
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <!-- Lista occupa 2/3 dello spazio -->
            <RowDefinition Height="*" />
            <!-- Form occupa 1/3 dello spazio -->
            <RowDefinition Height="Auto"/>
            <!-- Pulsanti con altezza automatica -->
        </Grid.RowDefinitions>


        <!-- Lista dei Piatti -->
        <Border Grid.Column="0" 
            Background="White" 
            CornerRadius="8" 
            Margin="0,0,0,20"
            Effect="{DynamicResource MaterialDesignShadowDepth1}">
            <ListView ItemsSource="{Binding Libri}"
                  SelectedItem="{Binding SelectedLibro}"
                  BorderThickness="0"
                  Padding="10">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Border Background="#FFFFFF" 
                            BorderBrush="#E0E0E0" 
                            BorderThickness="1"
                            CornerRadius="4"
                            Padding="15"
                            Margin="0,5">
                            <StackPanel>
                                <TextBlock Text="{Binding Titolo}" 
                                       FontSize="16" 
                                       FontWeight="Bold" 
                                       Foreground="#1976D2"/>
                                <TextBlock Text="{Binding AutoreId[0]}" 
                                       FontSize="14" 
                                       Margin="0,5"/>
                                <TextBlock Text="{Binding Descrizione}" 
                                       TextWrapping="Wrap"
                                       Margin="0,5"
                                       Foreground="#616161"/>
                                <TextBlock Text="{Binding ISBN}" 
                                       FontStyle="Italic"
                                       Foreground="#9E9E9E"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Border>

        <!-- Form Dettagli -->
        <Border Grid.Column="1" 
            Background="White" 
            CornerRadius="8" 
            Padding="20" 
            Margin="0,0,0,20"
            Effect="{DynamicResource MaterialDesignShadowDepth1}">
            <Grid DataContext="{Binding SelectedLibro}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="Nome" 
                       FontSize="14" FontWeight="SemiBold" Margin="0,8,0,0"/>
                <TextBox Grid.Row="0" Grid.Column="1" 
                     Text="{Binding Nome, UpdateSourceTrigger=PropertyChanged}"
                     Style="{StaticResource ModernTextBox}"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="Prezzo €" 
                       FontSize="14" FontWeight="SemiBold" Margin="0,8,0,0"/>
                <TextBox Grid.Row="2" Grid.Column="1" 
                     Text="{Binding Prezzo, UpdateSourceTrigger=PropertyChanged}"
                     Style="{StaticResource ModernTextBox}"
                     Height="80" TextWrapping="Wrap" AcceptsReturn="True"/>

                <TextBlock Grid.Row="2" Grid.Column="0" Text="Descrizione" 
                       FontSize="14" FontWeight="SemiBold" Margin="0,8,0,0"/>
                <TextBox Grid.Row="1" Grid.Column="1" 
                     Text="{Binding Descrizione, UpdateSourceTrigger=PropertyChanged}"
                     Style="{StaticResource ModernTextBox}"/>
            </Grid>
        </Border>



        <!-- Pulsanti -->
        <StackPanel Grid.Row="2"
                    Grid.Column="1"
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center">
            <Button Content="Nuovo" 
                    Command="{Binding AddLibroCommand}"
                    Style="{StaticResource ModernButton}"
                    Background="#4CAF50"/>
            <Button Content="Elimina" 
                    Command="{Binding DeleteLibroCommand}"
                    Style="{StaticResource ModernButton}"
                    Background="#F44336"/>
            <Button Content="Aggiorna" 
                    Command="{Binding LoadLibroCommand}"
                    Style="{StaticResource ModernButton}"/>
        </StackPanel>
    </Grid>
</Page>
