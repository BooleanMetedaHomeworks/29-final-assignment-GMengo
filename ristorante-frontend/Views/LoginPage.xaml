<Page x:Class="ristorante_frontend.Views.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ristorante_frontend.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid Margin="20">
        <Border Width="400" 
                Background="White" 
                CornerRadius="8" 
                Padding="30"
                HorizontalAlignment="Center" 
                VerticalAlignment="Center">

            <StackPanel>
                <TextBlock Text="Benvenuto" 
                         FontSize="29" 
                         FontWeight="Bold" 
                         HorizontalAlignment="Center" 
                         Margin="0,0,0,30"
                         Foreground="#1976D2"/>

                <TextBlock Text="Email" 
                         Margin="0,0,0,5" 
                         FontSize="14" 
                         FontWeight="SemiBold"
                         Foreground="#616161"/>
                <TextBox x:Name="EmailTxt" 
                        Style="{StaticResource ModernTextBox}"/>

                <TextBlock Text="Password" 
                         Margin="0,0,0,5" 
                         FontSize="14" 
                         FontWeight="SemiBold"
                         Foreground="#616161"/>
                <PasswordBox x:Name="PasswordTxt" 
                           Style="{StaticResource ModernPasswordBox}"
                           Margin="0,0,0,30"/>

                <Button Content="Accedi" 
                        Click="OnLoginBtnClick" 
                        Style="{StaticResource ModernButton}"
                        Margin="0,0,0,15"/>
                <Button Content="Registrati" 
                        Click="OnRegisterBtnClick"
                        Style="{StaticResource ModernButton}"
                        Background="#4CAF50" Margin="0,0,0,15"/>

                <!--<TextBlock Text="Password dimenticata?" 
                         HorizontalAlignment="Center" 
                         Margin="0,20,0,0" 
                         Foreground="#2196F3" 
                         FontSize="14"
                         Cursor="Hand"/>-->
            </StackPanel>
        </Border>
    </Grid>
</Page>
